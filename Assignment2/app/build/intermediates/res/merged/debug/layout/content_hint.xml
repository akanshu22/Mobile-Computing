<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.anshulkhantwal.myquizassignment2.Hint">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#80000000"
    android:id="@+id/linearLayout3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Is 1000 a prime number?"
        android:textSize="@dimen/text_small"
        android:textColor="@color/colorRadio"
        android:textAlignment="center"
        android:id="@+id/tv_ques_hint"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Press the button below to get Hint!!!"
        android:textSize="@dimen/text_extrasmall"
        android:textColor="@color/colorRadio"
        android:textAlignment="center"
        android:id="@+id/tv_hint" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="70dp"
        android:text="GET Hint"
        android:textColor="@color/colorButton"
        android:textSize="@dimen/text_small"
        android:onClick="onGetHint" />
</LinearLayout>
</RelativeLayout>
